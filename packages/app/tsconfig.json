{
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "esnext.asynciterable",
            "es2016",
            "es2017"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "pretty": true,
        "removeComments": false,
        "sourceMap": false,
        "stripInternal": true,
        "target": "es6",
        "baseUrl": "./src",
        "paths": {
            "@clickopolis/app": ["packages/app"]
        }
    },
    "exclude": [
        "node_modules",
        "@types",
        "dist"
    ]
}