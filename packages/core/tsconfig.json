{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "esnext.asynciterable",
            "es2016",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": false,
        "stripInternal": true,
        "target": "es6",
        "baseUrl": "./src",
        "outDir": "./dist",
    },
    "exclude": [
        "node_modules",
        "@types"
    ]
}